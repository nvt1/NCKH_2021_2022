@model IEnumerable<PhanCongGiangDay.Models.PhanCong>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a href="@Url.Action("ExportDatabase")" class="btn btn-danger" role="button" style="font-weight:bold; color:white;">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-down-circle" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v5.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V4.5z" />
    </svg>
    Download File Excel
</a>
@using (Html.BeginForm("Index", "PhanCong", FormMethod.Get))
{
    <div class="form-group">
        <input type="text" placeholder="Tìm kiếm tại đây....." name="search" style="width:500px" />
        <input type="submit" value="Search" class="btn-warning" />
    </div>
}

<div class="container-fluid">
    <h2 style="text-align:center">Danh sách đã phân công </h2>
    <table class="table">
        <tr style="background-color:aquamarine">

            <th style="text-align:center; width:4%">
                Mã môn học
            </th>
            <th style="text-align:center; width:15%">
                Tên môn học
            </th>
            <th style="text-align:center; width:5%">
                Số tín chỉ
            </th>
            <th style="text-align:center; width:5%">
                Số tiết LT
            </th>
            <th style="text-align:center; width:5%">
                Số tiết TH
            </th>
            <th style="text-align:center; width:6%">
                Tên nhóm
            </th>
            <th style="text-align: center; width:3%">
                Học kỳ
            </th>
            <th style="text-align: center; width: 7%">
                Năm học
            </th>
            <th style="text-align:center; width:10%">
                Mã Giảng viên
            </th>
            <th style="text-align:center; width:15%">
                Tên Giảng viên
            </th>
            <th style="text-align:center; width: 20%">
                Chức Năng
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align: center; font-weight: bold; height: 50px">
                    @item.NhomLop.MonHoc.MaMonHoc
                </td>
                <td style="text-align:center">
                    @item.NhomLop.MonHoc.TenMonHoc
                </td>
                <td style="text-align:center">
                    @item.NhomLop.MonHoc.SoTinChi
                </td>
                <td style="text-align:center">
                    @item.NhomLop.MonHoc.SoTietLT
                </td>
                <td style="text-align:center">
                    @item.NhomLop.MonHoc.SoTietTH
                </td>
                <td style="text-align:center">
                    @item.NhomLop.MaNhomLop
                </td>
                <td style="text-align:center">
                    @item.NhomLop.HocKy.HocKyThu
                </td>
                <td style="text-align:center">
                    @item.NhomLop.HocKy.NamHoc
                </td>
                <td style="text-align:center">
                    @item.GiangVien.MaGiangVien
                </td>
                <td style="text-align:center">
                    @item.GiangVien.HoTen
                </td>

                <td style="text-align:center">
                    @*<a href="@Url.Action("UpdatePhanCong", "PhanCong", new { phanCongId = item.PhanCongId })" class="btn btn-warning" role="button">Sửa</a>*@
                    <a href="@Url.Action("GetPhanCongByPhanCongId", "PhanCong", new { phanCongId = item.PhanCongId })" class="btn btn-primary" role="button">Chi tiết</a>
                    <a href="@Url.Action("DeletePhanCong", "PhanCong", new { phanCongId = item.PhanCongId })" class="btn btn-danger" role="button">Xóa</a>
                </td>
            </tr>
        }



    </table>
</div>

