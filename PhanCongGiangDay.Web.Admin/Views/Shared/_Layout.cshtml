@using PhanCongGiangDay.Models

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-16" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Admin</title>
    <link href="~/Content/admin/css/styles.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>

    <link href="~/Content/admin/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/wtf/bootstrap.min.js"></script>
    <script src="~/Scripts/wtf/jquery-3.4.1.min.js"></script>

    <script src="~/tinymce/js/tinymce/tinymce.min.js"></script>
    <script>tinymce.init({ selector: 'textarea' });</script>
</head>
<body>
    @{ GiangVien ad = Session["Admin"] as GiangVien;}
    

    <div>
        <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark" style="margin-bottom:0px; border-radius:0px;">
            <!-- Navbar Brand-->
            <a class="navbar-brand ps-3" href=@Url.Action("Index", "Admin")>TRANG QUẢN LÝ</a>
            <!-- Sidebar Toggle-->
            <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
            <!-- Navbar Search-->
            <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
                <div class="input-group">
                    @using (Html.BeginForm("Search", "Search", FormMethod.Get, new { @class = "navbar-form navbar-right", role = "search" }))
                    {
                        <div class="form-group">
                            <input type="text" class="form-control" placeholder="Tìm kiếm" name="strSearch" style="border-bottom-left-radius: 5px; border-top-left-radius: 5px" />
                        </div>
                        <button type="submit" class="btn btn-default">Tìm</button>
                    }
                </div>
            </form>
            <!-- Navbar-->
            <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4" style="padding-right:20px">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i>@{if(Session["Admin"] != null)
                                                                                                                                                                                        {
                                                                                                                                                                                            @ad.HoTen.ToString()                               
                                                                                                                                                                                        }
                                                                                                                                                                                       
                                                                                                                                                                                    }</a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="#!">Cập nhật</a></li>
                        <li><hr class="dropdown-divider" /></li>
                        <li><a class="dropdown-item" href="@Url.Action("DangXuat", "Admin")">Đăng xuất</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
        <div class="container-fluid" id="layoutSidenav" style=" padding-left:0px;">
            <div id="layoutSidenav_nav">
                <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                    <div class="sb-sidenav-menu">
                        <div class="nav">
                            <div class="sb-sidenav-menu-heading" style="font-size:12px">Quản lý</div>
                            <a class="nav-link" href="@Url.Action("Index", "GiangVien")">
                                <div class="sb-nav-link-icon"><i class="fas fa-money"></i></div>
                                Quản lý giảng viên

                            </a>
                            <a class="nav-link" href="@Url.Action("Index", "MonHoc")">
                                <div class="sb-nav-link-icon"><i class="fas fa-money"></i></div>
                                Quản lý môn học
                            </a>
                            <a class="nav-link" href="@Url.Action("Index", "Khoa")">
                                <div class="sb-nav-link-icon"><i class="fas fa-money"></i></div>
                                Quản lý khoa
                            </a>
                            <a class="nav-link" href="@Url.Action("Index", "HocKy")">
                                <div class="sb-nav-link-icon"><i class="fas fa-money"></i></div>
                                Quản lý học kỳ
                            </a>
                            <a class="nav-link" href="@Url.Action("Index", "NhomLop")">
                                <div class="sb-nav-link-icon"><i class="fas fa-money"></i></div>
                                Quản lý nhóm lớp
                            </a>
                            <div class="sb-sidenav-menu-heading" style="font-size:12px">Phân công</div>
                            <a class="nav-link collapsed" href="@Url.Action("Index", "PhanCong")">
                                <div class="sb-nav-link-icon"><i class="fas fa-laptop"></i></div>
                                Danh sách đã phân công
                            </a>
                            <a class="nav-link collapsed" href="@Url.Action("ChuaPhanCong", "PhanCong")">
                                <div class="sb-nav-link-icon"><i class="fas fa-laptop"></i></div>
                                Danh sách chưa phân công
                            </a>
                            <div class="sb-sidenav-menu-heading" style="font-size:12px">Thống kê</div>
                            <a class="nav-link collapsed" href="@Url.Action("ThongKe", "PhanCong")">
                                <div class="sb-nav-link-icon"><i class="fas fa-laptop"></i></div>
                                Thống kê danh sách phân công
                            </a>




                        </div>
                    </div>
                </nav>
            </div>
            <div id="layoutSidenav_content">
                <main>
                    @RenderBody()
                </main>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="~/Scripts/wtf/js/scripts.js"></script>
    </div>

</body>
</html>
