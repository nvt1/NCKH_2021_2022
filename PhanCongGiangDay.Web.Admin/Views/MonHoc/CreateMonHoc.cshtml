@model PhanCongGiangDay.Models.MonHoc

@{
    ViewBag.Title = "CreateMonHoc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thêm mới môn học</h2>

<style>
    input[type=text], select, textarea {
        width: 100%; /* Full width */
        padding: 12px; /* Some padding */
        border: 1px solid #ccc; /* Gray border */
        border-radius: 4px; /* Rounded borders */
        box-sizing: border-box; /* Make sure that padding and width stays in place */
        margin-top: 6px; /* Add a top margin */
        margin-bottom: 16px; /* Bottom margin */
        resize: vertical /* Allow the user to vertically resize the textarea (not horizontally) */
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <br />
        <br />

    
        <div class="form-group" style="padding-right: 10%;">
            <lable class="control-label col-md-2">Mã môn học </lable>
            <div class="col-md-10">
                <input type="text" size="70" name="MaMonHoc" />
            </div>
        </div>

        <div class="form-group" style="padding-right: 10%;">
            <lable class="control-label col-md-2">Tên môn học </lable>
            <div class="col-md-10">
                <input type="text" size="70" name="TenMonHoc" />
            </div>
        </div>

        <div class="form-group" style="padding-right: 10%;">
            <lable class="control-label col-md-2">Số tín chỉ</lable>
            <div class="col-md-10">
                <input type="text" size="70" name="SoTinChi" />
            </div>
        </div>

        <div class="form-group" style="padding-right: 10%;">
            <lable class="control-label col-md-2">Số tiết LT </lable>
            <div class="col-md-10">
                <input type="text" size="70" name="SoTietLT" />
            </div>
        </div>

        <div class="form-group" style="padding-right: 10%;">
            <lable class="control-label col-md-2">Số tiết TH</lable>
            <div class="col-md-10">
                <input type="text" size="70" name="SoTietTH" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
