@model IEnumerable<PhanCongGiangDay.Models.MonHoc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("CreateMonHoc")" class="btn btn-info bi bi-person-plus-fill" role="button" style="font-weight:bold; color:white;">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-plus-fill" viewBox="0 0 16 16">
            <path d="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0zM9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1zM8.5 7v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 1 0z" />
        </svg>
        Thêm mới
    </a>
    <a href="@Url.Action("ExportDatabase")" class="btn btn-danger" role="button" style="font-weight:bold; color:white;">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-down-circle" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v5.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V4.5z" />
        </svg>
        Download File Excel
    </a>
</p>@using (Html.BeginForm("Index", "MonHoc", FormMethod.Get))
{
    <div class="form-group">
        <input type="text" placeholder="Tìm kiếm tại đây....." name="search" style="width:500px" />
        <input type="submit" value="Search" class="btn-warning" />
    </div>
}
<table class="table">

    <tr style="background-color:aquamarine">
        <th style="text-align:center; width:10%">
            Mã môn học
        </th>
        <th style="text-align:center; width:35%">
            Tên môn học
        </th>
        <th style="text-align:center; width:10%">
            Số tín chỉ
        </th>
        <th style="text-align:center; width:12%">
            Số tiết lý thuyết
        </th>
        <th style="text-align:center; width:12%">
            Số tiết thực hành
        </th>
        <th style="text-align:center; width: 20%">
            Chức Năng
        </th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td style="text-align: center; font-weight: bold; height: 50px">
                @item.MaMonHoc
            </td>
            <td style="text-align:center">
                @item.TenMonHoc
            </td>
            <td style="text-align:center">
                @item.SoTinChi
            </td>
            <td style="text-align:center">
                @item.SoTietLT
            </td>
            <td style="text-align:center">
                @item.SoTietTH
            </td>


            <td style="text-align:center">
                <a href="@Url.Action("UpdateMonHoc", "MonHoc", new { maMonHoc = item.MaMonHoc})" class="btn btn-warning" role="button">Sửa</a>
                <a href="@Url.Action("GetMonHocByMaMonHoc", "MonHoc",  new { maMonHoc = item.MaMonHoc})" class="btn btn-primary" role="button">Chi tiết</a>
                <a href="@Url.Action("DeleteMonHoc", "MonHoc", new { maMonHoc = item.MaMonHoc })" class="btn btn-danger" role="button">Xóa</a>
            </td>
        </tr>
    }


</table>