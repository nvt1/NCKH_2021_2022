@model PhanCongGiangDay.Models.Khoa

@{
    ViewBag.Title = "UpdateKhoa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    input[type=text], select, textarea {
        width: 100%; /* Full width */
        padding: 12px; /* Some padding */
        border: 1px solid #ccc; /* Gray border */
        border-radius: 4px; /* Rounded borders */
        box-sizing: border-box; /* Make sure that padding and width stays in place */
        margin-top: 6px; /* Add a top margin */
        margin-bottom: 16px; /* Bottom margin */
        resize: vertical /* Allow the user to vertically resize the textarea (not horizontally) */
    }

    input[readonly] {
        background-color: #808080;
        color: black;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
</style>
<h2>Cập nhật thông tin khoa: @Model.TenKhoa</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />

        <div class="form-group" style="padding-right: 10%;">
            <lable class="control-label col-md-2">Mã Khoa </lable>
            <div class="col-md-10">
                <input type="text" size="70" name="MaKhoa" value="@Model.MaKhoa" readonly />
            </div>
        </div>

        <div class="form-group" style="padding-right: 10%;">
            <lable class="control-label col-md-2">Tên Khoa </lable>
            <div class="col-md-10">
                <input type="text" size="70" name="TenKhoa" value="@Model.TenKhoa" />
            </div>
        </div>

        <div class="form-group" style="padding-right: 10%;">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
